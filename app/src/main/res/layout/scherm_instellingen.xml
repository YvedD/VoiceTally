<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/root"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/vt5_black"
    android:orientation="vertical">

    <!-- Header met terugknop -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="12dp"
        android:gravity="center_vertical">

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnTerug"
            style="@style/Widget.VT5.Button.Outlined"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/instellingen_back_arrow"
            android:textSize="18sp"
            android:minWidth="48dp" />

        <TextView
            android:id="@+id/tvTitel"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginStart="12dp"
            android:text="@string/instellingen_titel"
            android:textColor="@color/vt5_on_surface"
            android:textSize="18sp"
            android:textStyle="bold" />
    </LinearLayout>

    <!-- Divider -->
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/vt5_on_surface"
        android:alpha="0.3" />

    <!-- Scrollable content -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:fillViewport="true">

        <!-- Content -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="12dp">

            <!-- Lettergrootte logregels -->
            <TextView
                android:id="@+id/tvLettergrootteLogLabel"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/instellingen_lettergrootte_log_label"
                android:textColor="@color/vt5_on_surface"
                android:textSize="15sp"
                android:paddingBottom="4dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical">

                <NumberPicker
                    android:id="@+id/npLettergrootteLog"
                    android:layout_width="80dp"
                    android:layout_height="wrap_content"
                    android:theme="@style/Theme.VT5.NumberPicker" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/instellingen_sp_eenheid"
                    android:textColor="@color/vt5_on_surface"
                    android:textSize="16sp"
                    android:paddingStart="8dp"
                    android:paddingEnd="8dp" />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:background="@color/vt5_on_surface"
                android:alpha="0.3" />

            <!-- Lettergrootte tegels -->
            <TextView
                android:id="@+id/tvLettergrootteTegelsLabel"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/instellingen_lettergrootte_tegels_label"
                android:textColor="@color/vt5_on_surface"
                android:textSize="15sp"
                android:paddingBottom="4dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical">

                <NumberPicker
                    android:id="@+id/npLettergrootteTegels"
                    android:layout_width="80dp"
                    android:layout_height="wrap_content"
                    android:theme="@style/Theme.VT5.NumberPicker" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/instellingen_sp_eenheid"
                    android:textColor="@color/vt5_on_surface"
                    android:textSize="16sp"
                    android:paddingStart="8dp"
                    android:paddingEnd="8dp" />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="10dp"
                android:background="@color/vt5_on_surface"
                android:alpha="0.3" />

            <!-- Kleuren -->
            <TextView
                android:id="@+id/tvKleurTitel"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/instellingen_colors_title"
                android:textColor="@color/vt5_on_surface"
                android:textSize="16sp"
                android:textStyle="bold"
                android:paddingVertical="8dp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/instellingen_bg_color_label"
                android:textColor="@color/vt5_on_surface"
                android:textSize="14sp"
                android:paddingBottom="6dp" />

            <Spinner
                android:id="@+id/spBackgroundColor"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/instellingen_text_color_label"
                android:textColor="@color/vt5_on_surface"
                android:textSize="14sp"
                android:layout_marginTop="8dp"
                android:paddingBottom="6dp" />

            <Spinner
                android:id="@+id/spTextColor"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

        </LinearLayout>

    </ScrollView>

</LinearLayout>
