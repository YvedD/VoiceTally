<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="16dp">

    <TextView
        android:id="@+id/tv_main_direction_label"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/dialog_direction_main"
        android:textStyle="bold"
        android:textColor="@color/vt5_white"
        android:layout_marginBottom="4dp" />

    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/et_main_count"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="number"
            android:hint="@string/dialog_default_zero"
            android:textColor="@color/vt5_white"
            android:textColorHint="@color/vt5_light_gray" />
    </com.google.android.material.textfield.TextInputLayout>

    <TextView
        android:id="@+id/tv_return_direction_label"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/dialog_direction_return"
        android:textStyle="bold"
        android:textColor="@color/vt5_white"
        android:layout_marginTop="12dp"
        android:layout_marginBottom="4dp" />

    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/et_return_count"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="number"
            android:hint="@string/dialog_default_zero"
            android:textColor="@color/vt5_white"
            android:textColorHint="@color/vt5_light_gray" />
    </com.google.android.material.textfield.TextInputLayout>

    <TextView
        android:id="@+id/tv_current_total"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/dialog_current_total_placeholder"
        android:textColor="@color/vt5_light_gray"
        android:layout_marginTop="12dp" />

</LinearLayout>
