<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:fillViewport="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- Informatie tekst -->
        <TextView
            android:id="@+id/tvInfo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:text="@string/afrond_confirm_info"
            android:textColor="@color/vt5_on_surface"
            android:textSize="14sp" />

        <!-- Begintijd -->
        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="12dp"
            android:hint="@string/beheer_begintijd"
            app:boxStrokeColor="@color/vt5_light_blue"
            app:hintTextColor="@color/vt5_light_blue">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/etBegintijd"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:focusable="false"
                android:clickable="true"
                android:textColor="@color/vt5_on_surface" />
        </com.google.android.material.textfield.TextInputLayout>

        <!-- Eindtijd -->
        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="12dp"
            android:hint="@string/beheer_eindtijd"
            app:boxStrokeColor="@color/vt5_light_blue"
            app:hintTextColor="@color/vt5_light_blue">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/etEindtijd"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:focusable="false"
                android:clickable="true"
                android:textColor="@color/vt5_on_surface" />
        </com.google.android.material.textfield.TextInputLayout>

        <!-- Opmerkingen -->
        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/beheer_opmerkingen"
            app:boxStrokeColor="@color/vt5_light_blue"
            app:hintTextColor="@color/vt5_light_blue">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/etOpmerkingen"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textMultiLine"
                android:minLines="2"
                android:maxLines="4"
                android:textColor="@color/vt5_on_surface" />
        </com.google.android.material.textfield.TextInputLayout>

    </LinearLayout>
</ScrollView>
