<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginVertical="4dp"
    app:cardBackgroundColor="@color/vt5_dark_gray"
    app:cardCornerRadius="6dp"
    app:strokeColor="@color/vt5_light_gray"
    app:strokeWidth="1dp"
    app:cardElevation="0dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="10dp"
        android:gravity="center_vertical">

        <!-- Record index -->
        <TextView
            android:id="@+id/tvIndex"
            android:layout_width="32dp"
            android:layout_height="wrap_content"
            android:textColor="@color/vt5_light_gray"
            android:textSize="12sp"
            android:gravity="center" />

        <!-- Record info -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginHorizontal="8dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tvSoortId"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/vt5_on_surface"
                android:textSize="14sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tvAantal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/vt5_light_blue"
                android:textSize="13sp" />

            <TextView
                android:id="@+id/tvOpmerkingen"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/vt5_light_gray"
                android:textSize="11sp"
                android:maxLines="2"
                android:ellipsize="end"
                android:visibility="gone" />

        </LinearLayout>

        <!-- Action buttons -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageButton
                android:id="@+id/btnEdit"
                android:layout_width="36dp"
                android:layout_height="36dp"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:contentDescription="Bewerken"
                android:src="@android:drawable/ic_menu_edit"
                app:tint="@color/vt5_light_blue" />

            <ImageButton
                android:id="@+id/btnDelete"
                android:layout_width="36dp"
                android:layout_height="36dp"
                android:layout_marginStart="4dp"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:contentDescription="Verwijderen"
                android:src="@android:drawable/ic_menu_delete"
                app:tint="@color/vt5_red" />

        </LinearLayout>

    </LinearLayout>

</com.google.android.material.card.MaterialCardView>
