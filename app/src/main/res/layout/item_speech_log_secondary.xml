<?xml version="1.0" encoding="utf-8"?>
<!-- Secondary copy of item_speech_log.xml for the second RecyclerView to avoid layout id conflicts.
     Content is intentionally the same for visual parity, but kept in a separate file for future divergence. -->
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/item_speech_log_secondary_root"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="?android:attr/selectableItemBackground"
    android:gravity="center_vertical"
    android:orientation="horizontal"
    android:paddingStart="2dp"
    android:paddingTop="0dp"
    android:paddingEnd="2dp"
    android:paddingBottom="0dp">
    <!-- Timestamp -->
    <TextView
        android:id="@+id/tvTime"
        android:layout_width="65dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="@dimen/padding_small"
        android:ellipsize="end"
        android:gravity="center_vertical"
        android:maxLines="1"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:textColor="@color/vt5_white"
        android:textSize="11sp" />
    <!-- Message / parsed summary -->
    <TextView
        android:id="@+id/tvMsg"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:ellipsize="end"
        android:maxLines="2"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textColor="@color/vt5_white"
        android:textSize="16sp" />
</LinearLayout>