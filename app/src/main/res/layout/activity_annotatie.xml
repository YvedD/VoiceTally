                            android:layout_marginBottom="3dp"
                            android:minHeight="20dp"
                            android:padding="2dp"
                            android:textSize="7sp" />

                        <androidx.appcompat.widget.AppCompatToggleButton
                            android:id="@+id/btn_geslacht_3"
                            style="@style/Widget.VT5.Button.Outlined"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="3dp"
                            android:layout_marginBottom="3dp"
                            android:minHeight="20dp"
                            android:padding="2dp"
                            android:textSize="7sp" />

                        <androidx.appcompat.widget.AppCompatToggleButton
                            android:id="@+id/btn_geslacht_4"
                            style="@style/Widget.VT5.Button.Outlined"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="3dp"
                            android:layout_marginBottom="3dp"
                            android:minHeight="20dp"
                            android:padding="2dp"
                            android:textSize="7sp" />

                    </LinearLayout>
                </LinearLayout>

                <!-- Column: kleed -->
                <LinearLayout
                    android:id="@+id/col_kleed_container"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:padding="2dp">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="2dp"
                        android:text="@string/annotation_plumage"
                        android:textAlignment="center"
                        android:textSize="12sp"
                        android:textStyle="normal" />

                    <LinearLayout
                        android:id="@+id/col_kleed"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <androidx.appcompat.widget.AppCompatToggleButton
                            android:id="@+id/btn_kleed_1"
                            style="@style/Widget.VT5.Button.Outlined"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="3dp"
                            android:layout_marginBottom="3dp"
                            android:minHeight="20dp"
                            android:padding="2dp"
                            android:textSize="7sp" />

                        <androidx.appcompat.widget.AppCompatToggleButton
                            android:id="@+id/btn_kleed_2"
                            style="@style/Widget.VT5.Button.Outlined"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="3dp"
                            android:layout_marginBottom="3dp"
                            android:minHeight="20dp"
                            android:padding="2dp"
                            android:textSize="7sp" />

                        <androidx.appcompat.widget.AppCompatToggleButton
                            android:id="@+id/btn_kleed_3"
                            style="@style/Widget.VT5.Button.Outlined"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="3dp"
                            android:layout_marginBottom="3dp"
                            android:minHeight="20dp"
                            android:padding="2dp"
                            android:textSize="7sp" />

                        <androidx.appcompat.widget.AppCompatToggleButton
                            android:id="@+id/btn_kleed_4"
                            style="@style/Widget.VT5.Button.Outlined"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="3dp"
                            android:layout_marginBottom="3dp"
                            android:minHeight="20dp"
                            android:padding="2dp"
                            android:textSize="7sp" />

                        <androidx.appcompat.widget.AppCompatToggleButton
                            android:id="@+id/btn_kleed_5"
                            style="@style/Widget.VT5.Button.Outlined"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="3dp"
                            android:layout_marginBottom="3dp"
                            android:minHeight="20dp"
                            android:padding="2dp"
                            android:textSize="7sp" />

                        <androidx.appcompat.widget.AppCompatToggleButton
                            android:id="@+id/btn_kleed_6"
                            style="@style/Widget.VT5.Button.Outlined"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="3dp"
                            android:layout_marginBottom="3dp"
                            android:minHeight="20dp"
                            android:padding="2dp"
                            android:textSize="7sp" />

                        <androidx.appcompat.widget.AppCompatToggleButton
                            android:id="@+id/btn_kleed_7"
                            style="@style/Widget.VT5.Button.Outlined"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="3dp"
                            android:layout_marginBottom="3dp"
                            android:minHeight="20dp"
                            android:padding="2dp"
                            android:textSize="7sp" />

                        <androidx.appcompat.widget.AppCompatToggleButton
                            android:id="@+id/btn_kleed_8"
                            style="@style/Widget.VT5.Button.Outlined"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="3dp"
                            android:layout_marginBottom="3dp"
                            android:minHeight="20dp"
                            android:padding="2dp"
                            android:textSize="7sp" />
                    </LinearLayout>
                </LinearLayout>

                <!-- Column: location -->
                <LinearLayout
                    android:id="@+id/col_location_container"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:padding="2dp">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="2dp"
                        android:text="@string/annotation_location"
                        android:textAlignment="center"
                        android:textSize="12sp"
                        android:textStyle="normal" />

                    <LinearLayout
                        android:id="@+id/col_location"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <androidx.appcompat.widget.AppCompatToggleButton
                            android:id="@+id/btn_location_1"
                            style="@style/Widget.VT5.Button.Outlined"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="3dp"
                            android:layout_marginBottom="3dp"
                            android:minHeight="20dp"
                            android:padding="2dp"
                            android:textSize="7sp" />

                        <androidx.appcompat.widget.AppCompatToggleButton
                            android:id="@+id/btn_location_2"
                            style="@style/Widget.VT5.Button.Outlined"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="3dp"
                            android:layout_marginBottom="3dp"
                            android:minHeight="20dp"
                            android:padding="2dp"
                            android:textSize="7sp" />

                        <androidx.appcompat.widget.AppCompatToggleButton
                            android:id="@+id/btn_location_3"
                            style="@style/Widget.VT5.Button.Outlined"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="3dp"
                            android:layout_marginBottom="3dp"
                            android:minHeight="20dp"
                            android:padding="2dp"
                            android:textSize="7sp" />

                        <androidx.appcompat.widget.AppCompatToggleButton
                            android:id="@+id/btn_location_4"
                            style="@style/Widget.VT5.Button.Outlined"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="3dp"
                            android:layout_marginBottom="3dp"
                            android:minHeight="20dp"
                            android:padding="2dp"
                            android:textSize="7sp" />

                        <androidx.appcompat.widget.AppCompatToggleButton
                            android:id="@+id/btn_location_5"
                            style="@style/Widget.VT5.Button.Outlined"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="3dp"
                            android:layout_marginBottom="3dp"
                            android:minHeight="20dp"
                            android:padding="2dp"
                            android:textSize="7sp" />

                        <androidx.appcompat.widget.AppCompatToggleButton
                            android:id="@+id/btn_location_6"
                            style="@style/Widget.VT5.Button.Outlined"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="3dp"
                            android:layout_marginBottom="3dp"
                            android:minHeight="20dp"
                            android:padding="2dp"
                            android:textSize="7sp" />

                        <androidx.appcompat.widget.AppCompatToggleButton
                            android:id="@+id/btn_location_7"
                            style="@style/Widget.VT5.Button.Outlined"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="3dp"
                            android:layout_marginBottom="3dp"
                            android:minHeight="20dp"
                            android:padding="2dp"
                            android:textSize="7sp" />

                        <androidx.appcompat.widget.AppCompatToggleButton
                            android:id="@+id/btn_location_8"
                            style="@style/Widget.VT5.Button.Outlined"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="3dp"
                            android:layout_marginBottom="3dp"
                            android:minHeight="20dp"
                            android:padding="2dp"
                            android:textSize="7sp" />
                    </LinearLayout>
                </LinearLayout>

                <!-- Column: height -->
                <LinearLayout
                    android:id="@+id/col_height_container"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:padding="2dp">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="2dp"
                        android:text="@string/annotation_height"
                        android:textAlignment="center"
                        android:textSize="12sp"
                        android:textStyle="normal" />

                    <LinearLayout
                        android:id="@+id/col_height"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <androidx.appcompat.widget.AppCompatToggleButton
                            android:id="@+id/btn_height_1"
                            style="@style/Widget.VT5.Button.Outlined"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="3dp"
                            android:layout_marginBottom="3dp"
                            android:minHeight="20dp"
                            android:padding="2dp"
                            android:textSize="7sp" />

                        <androidx.appcompat.widget.AppCompatToggleButton
                            android:id="@+id/btn_height_2"
                            style="@style/Widget.VT5.Button.Outlined"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="3dp"
                            android:layout_marginBottom="3dp"
                            android:minHeight="20dp"
                            android:padding="2dp"
                            android:textSize="7sp" />

                        <androidx.appcompat.widget.AppCompatToggleButton
                            android:id="@+id/btn_height_3"
                            style="@style/Widget.VT5.Button.Outlined"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="3dp"
                            android:layout_marginBottom="3dp"
                            android:minHeight="20dp"
                            android:padding="2dp"
                            android:textSize="7sp" />

                        <androidx.appcompat.widget.AppCompatToggleButton
                            android:id="@+id/btn_height_4"
                            style="@style/Widget.VT5.Button.Outlined"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="3dp"
                            android:layout_marginBottom="3dp"
                            android:minHeight="20dp"
                            android:padding="2dp"
                            android:textSize="7sp" />

                        <androidx.appcompat.widget.AppCompatToggleButton
                            android:id="@+id/btn_height_5"
                            style="@style/Widget.VT5.Button.Outlined"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="3dp"
                            android:layout_marginBottom="3dp"
                            android:minHeight="20dp"
                            android:padding="2dp"
                            android:textSize="7sp" />

                        <androidx.appcompat.widget.AppCompatToggleButton
                            android:id="@+id/btn_height_6"
                            style="@style/Widget.VT5.Button.Outlined"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="3dp"
                            android:layout_marginBottom="3dp"
                            android:minHeight="20dp"
                            android:padding="2dp"
                            android:textSize="7sp" />

                        <androidx.appcompat.widget.AppCompatToggleButton
                            android:id="@+id/btn_height_7"
                            style="@style/Widget.VT5.Button.Outlined"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="3dp"
                            android:layout_marginBottom="3dp"
                            android:minHeight="20dp"
                            android:padding="2dp"
                            android:textSize="7sp" />

