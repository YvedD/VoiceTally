                            android:id="@+id/btn_height_8"
                            style="@style/Widget.VT5.Button.Outlined"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="3dp"
                            android:layout_marginBottom="3dp"
                            android:minHeight="20dp"
                            android:padding="2dp"
                            android:textSize="7sp" />
                    </LinearLayout>
                </LinearLayout>

            </LinearLayout>

            <!-- Checkboxes row -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="start"
                android:orientation="horizontal"
                android:padding="2dp">

                <CheckBox
                    android:id="@+id/cb_markeren"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="1dp"
                    android:text="@string/annotation_mark"
                    android:textSize="11sp" />

                <CheckBox
                    android:id="@+id/cb_markeren_lokaal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="12dp"
                    android:padding="1dp"
                    android:text="@string/annotation_mark_local"
                    android:textSize="11sp" />

                <CheckBox
                    android:id="@+id/cb_tally"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="12dp"
                    android:padding="1dp"
                    android:text="@string/annotation_tally"
                    android:textSize="11sp" />
            </LinearLayout>

            <!-- Sighting Direction (Compass) row -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:padding="4dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/annotation_sighting_direction"
                    android:textSize="12sp" />

                <Button
                    android:id="@+id/btn_compass"
                    android:layout_width="wrap_content"
                    android:layout_height="36dp"
                    android:layout_marginStart="8dp"
                    android:minWidth="100dp"
                    android:padding="4dp"
                    android:text="@string/compass_select"
                    android:textSize="11sp" />

                <TextView
                    android:id="@+id/tv_selected_sighting_direction"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:text=""
                    android:textColor="@color/design_default_color_primary"
                    android:textSize="14sp"
                    android:textStyle="bold" />

            </LinearLayout>

            <!-- Manual count inputs section -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="1dp"
                android:orientation="vertical"
                android:padding="2dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingBottom="8dp"
                    android:text="@string/annotation_manual_counts_title"
                    android:textSize="12sp"
                    android:textStyle="bold" />

                <!-- Aantal (hoofdrichting - seizoensafhankelijk label) -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:paddingStart="1dp">

                    <TextView
                        android:id="@+id/tv_label_aantal"
                        android:layout_width="120dp"
                        android:layout_height="wrap_content"
                        android:text="@string/annotation_count_main"
                        android:textSize="16sp" />

                    <EditText
                        android:id="@+id/et_aantal"
                        android:layout_width="100dp"
                        android:layout_height="wrap_content"
                        android:layout_margin="1dp"
                        android:contentDescription="@string/annotation_count_main"
                        android:hint="0"
                        android:inputType="number"
                        android:paddingStart="8dp"
                        android:paddingEnd="8dp"
                        android:singleLine="false"
                        android:textSize="16sp" />
                </LinearLayout>

                <!-- Aantal terug (tegengestelde richting - seizoensafhankelijk label) -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:paddingStart="1dp">

                    <TextView
                        android:id="@+id/tv_label_aantalterug"
                        android:layout_width="120dp"
                        android:layout_height="wrap_content"
                        android:text="@string/annotation_count_return"
                        android:textSize="16sp" />

                    <EditText
                        android:id="@+id/et_aantalterug"
                        android:layout_width="100dp"
                        android:layout_height="wrap_content"
                        android:layout_margin="1dp"
                        android:contentDescription="@string/annotation_count_return"
                        android:hint="0"
                        android:inputType="number"
                        android:paddingStart="8dp"
                        android:paddingEnd="8dp"
                        android:singleLine="false"
                        android:textSize="16sp" />
                </LinearLayout>

                <!-- Aantal Lokaal -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:paddingStart="1dp">

                    <TextView
                        android:layout_width="120dp"
                        android:layout_height="wrap_content"
                        android:text="@string/annotation_count_local"
                        android:textSize="16sp" />

                    <EditText
                        android:id="@+id/et_aantal_lokaal"
                        android:layout_width="100dp"
                        android:layout_height="wrap_content"
                        android:layout_margin="1dp"
                        android:contentDescription="@string/annotation_count_local"
                        android:hint="0"
                        android:inputType="number"
                        android:paddingStart="8dp"
                        android:paddingEnd="8dp"
                        android:singleLine="false"
                        android:textSize="16sp" />
                </LinearLayout>

                <!-- Opmerking -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="start"
                    android:orientation="horizontal"
                    android:paddingTop="8dp">

                    <TextView
                        android:layout_width="120dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="top"
                        android:paddingTop="4dp"
                        android:text="@string/annotation_remarks"
                        android:textSize="12sp" />

                    <EditText
                        android:id="@+id/et_opmerkingen"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:contentDescription="@string/annotation_remarks"
                        android:hint="@string/annotation_remarks_hint"
                        android:inputType="textMultiLine"
                        android:maxLines="4"
                        android:minLines="2"
                        android:paddingStart="8dp"
                        android:paddingEnd="8dp"
                        android:textSize="12sp" />
                </LinearLayout>
            </LinearLayout>
            <!-- Buttons -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="end"
                android:paddingTop="8dp"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/btn_cancel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="5dp"
                    android:paddingLeft="5dp"
                    android:paddingTop="5dp"
                    android:paddingRight="5dp"
                    android:paddingBottom="5dp"
                    android:text="@string/annotatie_annuleren" />

                <Button
                    android:id="@+id/btn_ok"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="12dp"
                    android:padding="5dp"
                    android:paddingLeft="5dp"
                    android:paddingTop="5dp"
                    android:paddingRight="5dp"
                    android:paddingBottom="5dp"
                    android:text="@string/annotatie_ok" />
            </LinearLayout>
        </LinearLayout>
    </ScrollView>



</LinearLayout>
