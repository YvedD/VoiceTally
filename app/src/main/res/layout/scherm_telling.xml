<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/root"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="8dp">

    <!-- Titel -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:paddingBottom="1dp"
        android:text="@string/telling_speech_results"
        android:textSize="11sp"
        android:textStyle="bold" />

    <!-- Bovenste kaart: PARTIALS / nietâ€‘finals -->
    <com.google.android.material.card.MaterialCardView
        android:id="@+id/cardSpeechPartials"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:layout_marginTop="1dp"
        android:layout_marginBottom="1dp"
        app:cardCornerRadius="8dp"
        app:cardUseCompatPadding="true"
        app:strokeColor="@color/vt5_light_blue"
        app:strokeWidth="2dp">

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recyclerViewSpeechPartials"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#111111"
            android:padding="6dp" />
    </com.google.android.material.card.MaterialCardView>

    <!-- Onderste kaart: FINALS -->
    <com.google.android.material.card.MaterialCardView
        android:id="@+id/cardSpeechFinals"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:layout_marginTop="1dp"
        android:layout_marginBottom="1dp"
        app:cardCornerRadius="8dp"
        app:cardUseCompatPadding="true"
        app:strokeColor="@color/vt5_green"
        app:strokeWidth="2dp">

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recyclerViewSpeechFinals"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#111111"
            android:padding="6dp" />
    </com.google.android.material.card.MaterialCardView>

    <!-- Actieknoppen -->
    <LinearLayout
        android:id="@+id/knoppenBalk1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:orientation="horizontal"
        android:padding="4dp">

        <Button
            android:id="@+id/btnSaveClose"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:paddingLeft="3dp"
            android:paddingTop="3dp"
            android:paddingRight="3dp"
            android:text="@string/telling_totals" />

        <Button
            android:id="@+id/btnAddSoorten"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:paddingLeft="3dp"
            android:paddingTop="3dp"
            android:paddingRight="3dp"
            android:text="@string/telling_add" />

        <Button
            android:id="@+id/btnAfronden"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:layout_marginStart="8dp"
            android:paddingLeft="3dp"
            android:paddingTop="3dp"
            android:paddingRight="3dp"
            android:text="@string/telling_finish" />
    </LinearLayout>

    <!-- Grid met soort-tiles -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerViewSpecies"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"/>
</LinearLayout>