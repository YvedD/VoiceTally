<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/root"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/vt5_black"
    android:orientation="vertical">

    <!-- Header -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:padding="12dp">

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnTerug"
            style="@style/Widget.VT5.Button.Outlined"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:minWidth="48dp"
            android:text="@string/instellingen_back_arrow"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/tvTitel"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="12dp"
            android:layout_weight="1"
            android:text="@string/instellingen_titel"
            android:textColor="@color/vt5_on_surface"
            android:textSize="18sp"
            android:textStyle="bold" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:alpha="0.3"
        android:background="@color/vt5_on_surface" />

    <!-- Tablet: scrollable zodat alles zichtbaar blijft -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="12dp">

            <!-- Lettergrootte logregels (compact) -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:paddingTop="2dp"
                android:paddingBottom="2dp">

                <TextView
                    android:id="@+id/tvLettergrootteLogLabel"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/instellingen_lettergrootte_log_label"
                    android:textColor="@color/vt5_on_surface"
                    android:textSize="15sp" />

                <NumberPicker
                    android:id="@+id/npLettergrootteLog"
                    android:layout_width="100dp"
                    android:layout_height="70dp"
                    android:theme="@style/Theme.VT5.NumberPicker" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingStart="6dp"
                    android:paddingEnd="6dp"
                    android:text="@string/instellingen_sp_eenheid"
                    android:textColor="@color/vt5_on_surface"
                    android:textSize="15sp" />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="6dp"
                android:layout_marginBottom="6dp"
                android:alpha="0.3"
                android:background="@color/vt5_on_surface" />

            <!-- Lettergrootte tegels (compact) -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:paddingTop="2dp"
                android:paddingBottom="2dp">

                <TextView
                    android:id="@+id/tvLettergrootteTegelsLabel"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/instellingen_lettergrootte_tegels_label"
                    android:textColor="@color/vt5_on_surface"
                    android:textSize="15sp" />

                <NumberPicker
                    android:id="@+id/npLettergrootteTegels"
                    android:layout_width="100dp"
                    android:layout_height="70dp"
                    android:theme="@style/Theme.VT5.NumberPicker" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingStart="6dp"
                    android:paddingEnd="6dp"
                    android:text="@string/instellingen_sp_eenheid"
                    android:textColor="@color/vt5_on_surface"
                    android:textSize="15sp" />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="6dp"
                android:layout_marginBottom="6dp"
                android:alpha="0.3"
                android:background="@color/vt5_on_surface" />

            <!-- Favorieten limiet -->
            <TextView
                android:id="@+id/tvFavTitel"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="4dp"
                android:paddingBottom="6dp"
                android:text="@string/instellingen_fav_limit_title"
                android:textColor="@color/vt5_on_surface"
                android:textSize="16sp"
                android:textStyle="bold" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnFav15"
                    style="@style/Widget.VT5.Button.Outlined"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:minHeight="40dp"
                    android:checkable="true"
                    android:text="@string/instellingen_fav_15" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnFav20"
                    style="@style/Widget.VT5.Button.Outlined"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="6dp"
                    android:layout_weight="1"
                    android:minHeight="40dp"
                    android:checkable="true"
                    android:text="@string/instellingen_fav_20" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnFav25"
                    style="@style/Widget.VT5.Button.Outlined"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="6dp"
                    android:layout_weight="1"
                    android:minHeight="40dp"
                    android:checkable="true"
                    android:text="@string/instellingen_fav_25" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnFav30"
                    style="@style/Widget.VT5.Button.Outlined"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="6dp"
                    android:layout_weight="1"
                    android:minHeight="40dp"
                    android:checkable="true"
                    android:text="@string/instellingen_fav_30" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="6dp"
                android:orientation="horizontal">

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnFav35"
                    style="@style/Widget.VT5.Button.Outlined"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:minHeight="40dp"
                    android:checkable="true"
                    android:text="@string/instellingen_fav_35" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnFav40"
                    style="@style/Widget.VT5.Button.Outlined"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="6dp"
                    android:layout_weight="1"
                    android:minHeight="40dp"
                    android:checkable="true"
                    android:text="@string/instellingen_fav_40" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnFavAll"
                    style="@style/Widget.VT5.Button.Outlined"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="6dp"
                    android:layout_weight="2"
                    android:minHeight="40dp"
                    android:checkable="true"
                    android:text="@string/instellingen_fav_all" />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="8dp"
                android:alpha="0.3"
                android:background="@color/vt5_on_surface" />

            <!-- Kleuren -->
            <TextView
                android:id="@+id/tvKleurTitel"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="4dp"
                android:paddingBottom="6dp"
                android:text="@string/instellingen_colors_title"
                android:textColor="@color/vt5_on_surface"
                android:textSize="16sp"
                android:textStyle="bold" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingBottom="6dp"
                android:text="@string/instellingen_bg_color_label"
                android:textColor="@color/vt5_on_surface"
                android:textSize="14sp" />

            <Spinner
                android:id="@+id/spBackgroundColor"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:paddingBottom="6dp"
                android:text="@string/instellingen_text_color_label"
                android:textColor="@color/vt5_on_surface"
                android:textSize="14sp" />

            <Spinner
                android:id="@+id/spTextColor"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
        </LinearLayout>

    </ScrollView>

</LinearLayout>

